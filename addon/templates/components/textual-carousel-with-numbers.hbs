<div class="carousel">
	<div class="title">Carousel with numbers</div>
	<div class="carousel-content">
		{{#each textualSlider as |slide|}}
			<div class="carousel-item {{if slide.active 'active'}}">
				<h3>{{slide.title}}</h3>
				<p>{{slide.data}}</p>
			</div>
		{{/each}}
	</div>
	<ol class="carousel-nav nav-without-circle">
		{{#each textualSlider as |button index|}}
			<li class={{if button.active "active"}} {{action 'slideContent' index}}>{{button.value}}</li>
		{{/each}}
	</ol>
</div>
{{yield}}
